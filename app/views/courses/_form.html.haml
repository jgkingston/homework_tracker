%div.col-lg-4
  = form_for @course, html: {class: ''} do |f|
    - if f.object.errors.messages.length>0
      - f.object.errors.messages.each do | key, value |
        = key.capitalize
        - value.each do |message|
          = message
          %br
    
    = f.label :title, "Course Title", class: "control-label"
    = f.text_field :title, class: "form-control"
    
    %br
    = f.label :description, "Course Description", class: "control-label"
    = f.text_area :description, class: 'form-control'
    %br
    = render 'locations'
    %br
    = f.submit  nil, class: 'btn btn-success'