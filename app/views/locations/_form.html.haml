%div.col-lg-4
  = form_for @location, html: {class: ''} do |f|
    - if f.object.errors.messages.length>0
      - f.object.errors.messages.each do | key, value |
        = key.capitalize
        - value.each do |message|
          = message
          %br
    %div.row
      %div.col-md-8
        = f.label :city, "City", class: "control-label"
        = f.text_field :city, class: "form-control"
      %div.col-md-4
        = f.label :state, "State", class: "control-label"
        = f.text_field :state, class: "form-control"
    %br
    = f.label :blurb, "Description", class: "control-label"
    = f.text_area :blurb, class: 'form-control'
    %br
    = render 'courses'
    %br
    = f.submit  nil, class: 'btn btn-success'