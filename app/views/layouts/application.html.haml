!!!
%html
  %head
    %title HomeworkTracker
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    
  %body
    .navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#{root_path}"} 
            The Iron Tracker
            - if user_signed_in?
              = "::"
              = current_user.role.humanize
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            / %li.active
            /   %a{:href => "#"} Locations
            / %li
            /   %a{:href => "#"} Cohorts
            - if user_signed_in?
              - if current_user.admin?

                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Admin Options
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to "Set User Roles", users_path
                    %li.divider
                    %li.dropdown-header Create New
                    %li
                      = link_to "Create New Location", new_location_path
                    %li
                      = link_to "Create New Course", new_course_path
          / %ul.nav.navbar-nav
          /   %li
          /     %a{:href => "#"} Locations
          /   %li
          /     %a{:href => "#about"} Courses
          /   %li
          /     %a{:href => "#contact"} Cohorts
          %div.navbar-form.navbar-right{:role => "form"}
            .form-group
              = render 'devise/menu/registration_items'
            .form-group
              = render 'devise/menu/login_items'
        / /.navbar-collapse





    .alertBoxContainer.col-xs-10.col-xs-offset-1
      .alert.alert-success.alert-dismissible{:role => "alert"}
        %button.close{"data-dismiss" => "alert", :type => "button"}
          %span{"aria-hidden" => "true"} ×
          %span.sr-only Close
        %p.signInReturnSuccess= notice
      .alert.alert-danger.alert-dismissible{:role => "alert"}
        %button.close{"data-dismiss" => "alert", :type => "button"}
          %span{"aria-hidden" => "true"} ×
          %span.sr-only Close
        %p.signInReturnAlert= alert
    .container
      = yield
